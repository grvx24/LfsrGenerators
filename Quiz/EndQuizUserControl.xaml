<UserControl x:Class="PZ_generatory.Quiz.EndQuizUserControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:PZ_generatory.Quiz"
             mc:Ignorable="d" 
             MinWidth="880"
             Height="450" Width="auto" Background="White">

    <Grid x:Name="MainPage" HorizontalAlignment="Center" MinWidth="880">
        <StackPanel >
            <Label  Foreground="#FF224BB6" FontSize="60" HorizontalContentAlignment="Center" VerticalContentAlignment="Center">
                Quiz Zakończony !
            </Label>
            <Label Margin="0,40,0,0" x:Name="ResultLabel" FontSize="90" Content=" 80%" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" Foreground="#FF224BB6" />
            <Label FontSize="40" Content="poprawnych odpowiedzi" HorizontalContentAlignment="Center" VerticalContentAlignment="Center"/>
            <Label FontSize="40" x:Name="MotywacyjnyLabel" Content="No no całkiem nieźle :)" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" Foreground="#FF224BB6"/>
        </StackPanel>

    </Grid>
</UserControl>